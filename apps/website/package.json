{
  "name": "website",
  "version": "0.0.1",
  "private": true,
  "prepare": "svelte-kit sync",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "# npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "clean": "rm -rf node_modules && rm -rf .svelte-kit/generated",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest"
  },
  "dependencies": {
    "@fieldzoo/base64-uuid": "workspace:*",
    "@fieldzoo/env-config": "workspace:*",
    "@fieldzoo/general-model": "workspace:*",
    "@fieldzoo/generic-types": "workspace:*",
    "@fieldzoo/postgres-utils": "workspace:*",
    "@fieldzoo/system-model": "workspace:*",
    "@fieldzoo/typebox-types": "workspace:*",
    "@lucia-auth/adapter-postgresql": "2.0.0",
    "@melt-ui/svelte": "^0.31.0",
    "@sinclair/typebox": "^0.30.2",
    "http-status-codes": "^2.2.0",
    "kysely": "^0.24.2",
    "lucia": "2.0.0",
    "pg": "^8.9.0",
    "typebox-validators": "^0.3.0",
    "ui-components": "workspace:*"
  },
  "devDependencies": {
    "@melt-ui/pp": "^0.1.0",
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.20.4",
    "@types/pg": "^8.6.6",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.40.0",
    "eslint-config-custom-svelte": "workspace:*",
    "postcss": "^8.4.24",
    "postcss-load-config": "^4.0.1",
    "svelte": "^4.0.0",
    "svelte-check": "^3.4.3",
    "svelte-sequential-preprocessor": "^2.0.1",
    "tailwind-config": "workspace:*",
    "tailwindcss": "^3.3.2",
    "tsconfig": "workspace:*",
    "tslib": "^2.4.1",
    "typescript": "5.1.3",
    "vite": "^4.3.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.2"
  },
  "type": "module"
}
