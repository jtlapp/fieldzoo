{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "outputMode": "errors-only"
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": [],
      "outputMode": "errors-only"
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false,
      "outputMode": "errors-only"
    }
  }
}
